{
    "extends": "../tslint.json",

    "rules": {
        "typedef-whitespace": [false],
        "semicolon": [true, "always", "strict-bound-class-methods"],
        "directive-selector": [
            true,
            "attribute",
            "app",
            "camelCase"
        ],
        "component-selector": [
            true,
            "element",
            "app",
            "kebab-case"
        ]
    }
}
